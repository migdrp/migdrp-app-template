		"ts-loader": "^7.0.5",
		"ts-node": "^9.0.0",
		"typescript": "^4.1.2"
	},
	"scripts": {
		"start": "ts-node ./src/server/server.ts",
		"nodemon": "npx nodemon",
		"webpack:dev": "webpack -w --config webpack.config.js",
		"webpack:build": "webpack --config webpack.config.js",
		"dev": "set NODE_ENV=development&& npx run-p webpack:dev nodemon",
		"prod": "set NODE_ENV=production&& npx run-s webpack:build start"
