{
	"name": "migdrp-app-template",
	"version": "1.0.0",
	"description": "Template de aplicación en contrucción",
	"engines": {
		"node": "12.x",
		"npm": "6.x"
	},
	"dependencies": {
		"@types/express": "^4.17.8",
		"@types/node": "^14.14.9",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"dotenv": "^8.2.0",
